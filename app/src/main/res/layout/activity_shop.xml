<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".ShopActivity">



    <TextView
        android:id="@+id/titleMyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text=" My List"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleMyList"
        android:layout_marginTop="9dp"
        android:text="Scan to add item" />


    <!-- List Table Section -->
    <TableLayout
        android:id="@+id/tableLayoutList"
        android:layout_width="match_parent"
        android:layout_height="436dp"
        android:layout_below="@id/buttonScan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp">

        <!-- Table Header -->
        <TableRow>

            <TextView
                android:layout_column="0"
                android:gravity="center"
                android:padding="8dp"
                android:text="Item" />

            <TextView
                android:layout_width="143dp"
                android:layout_column="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="Quantity" />

            <TextView
                android:layout_width="63dp"
                android:layout_column="2"
                android:gravity="center"
                android:padding="8dp"
                android:text="Price" />

            <TextView
                android:layout_column="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="Total" />
        </TableRow>

        <!-- Table Rows (Dynamically added after clicking Scan button) -->
        <!-- Example row, you'll dynamically add rows in your code -->
        <TableRow>

            <TextView
                android:id="@+id/textViewItemName"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Item Name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="-" />

                <EditText
                    android:id="@+id/editTextQuantity"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:hint="Enter Quantity"
                    android:inputType="number"
                    android:padding="8dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="+" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewItemPrice"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Item Price" />

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Total Price" />
        </TableRow>

        <!-- Total Price -->
        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_column="4"
                android:gravity="center"
                android:padding="8dp"
                android:text="Total Price" />

            <TextView
                android:id="@+id/textViewOverallTotal"
                android:gravity="center"
                android:padding="8dp"
                android:text="0.00" />
        </TableRow>

    </TableLayout>



    <Button
        android:id="@+id/buttonBack"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_below="@id/tableLayoutList"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="257dp"
        android:text="Back" />

    <Button
        android:id="@+id/buttonCheckout"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_below="@id/tableLayoutList"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="262dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:text="Check-Out" />




</RelativeLayout>