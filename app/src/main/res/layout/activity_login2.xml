<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zexerbck"
    android:padding="16dp"
    tools:context=".LoginActivity2">


    <EditText
        android:id="@+id/editTextOrgEmail"
        android:layout_width="377dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="239dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/home"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Organization Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/editTextOrgPassword"
        android:layout_width="377dp"
        android:layout_height="63dp"
        android:layout_below="@id/editTextOrgEmail"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/buttonOrgLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextOrgPassword"
        android:layout_marginTop="20dp"
        android:text="Login" />


    <TextView
        android:id="@+id/textViewNewUser2"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOrgLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="149dp"
        android:text="Register for new user"
        android:textColor="@color/white" />


</RelativeLayout>
